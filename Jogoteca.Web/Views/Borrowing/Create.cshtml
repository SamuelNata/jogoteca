@model Jogoteca.Models.ViewModels.BorrowGameVM

@{
    ViewData["Title"] = "Create";
}

<h1>Emprestar jogo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Jogo</label>
                <select asp-for="GameOwnershipId" asp-items="@ViewBag.gamesList" class="form-control"></select>
                <span asp-validation-for="GameOwnershipId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGetingBorrowedId" class="control-label"></label>
                <select asp-for="UserGetingBorrowedId" asp-items="@ViewBag.Users" class="form-control"></select>
                <span asp-validation-for="UserGetingBorrowedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PredictedDevolution" class="control-label"></label>
                <input asp-for="PredictedDevolution" class="form-control" />
                <span asp-validation-for="PredictedDevolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Emprestar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para meus emprestimos</a>
</div>

