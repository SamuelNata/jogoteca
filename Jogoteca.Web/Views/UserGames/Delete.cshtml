@model Jogoteca.Models.Entities.UserGame

@{
    ViewData["Title"] = "Remover jogo da minha lista";
}

<div class="text-center mt-5">
    <h3>Atenção!</h3>
    <h4>Quer mesmo remover este jogo da sua lista?</h4>
    <label>@Model.Game.Name</label>
</div>
<div>
    <hr />
    <dl class="row">
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
